---
import { 
    Card,
    CardContent,
    CardDescription,
    CardHeader,
    CardTitle,
} from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { ExternalLink } from 'lucide-react';

type Props = {
    title: string;
    description: string;
    techStack: {
        tech: string;
        type: "default" | "outline" | "secondary";
        class: string;
    }[];
    link: string;
    source: string;
};

const { title, description, techStack, link } = Astro.props;
---

<Card className="">
    <CardHeader>
        <div class="flex justify-between items-center text-amber-50">
        <a href={link} target="_blank" rel="noopener noreferrer" class="text-blue-500 hover:underline">
        <CardTitle>{title}</CardTitle>
        </a>
            <a href={Astro.props.source} target="_blank" rel="noopener noreferrer" class="ml-4 text-blue-500 hover:underline">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github-icon lucide-github"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
            </a>
        </div>
        <div class="flex flex-wrap gap-2 my-2">
            {techStack.map((tech) => (
                <Badge variant={tech.type} className={tech.class}>{tech.tech}</Badge>
            ))}
        </div>
    </CardHeader>
    <CardContent>
        <CardDescription>{description}</CardDescription>
